---
interface Props {
    title: string
}

import '../styles/main.css'

const { title } = Astro.props as Props;
const { pathname } = Astro.url;
---


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>WebDevGroupShop - { title }</title>
    <link rel="icon" type="image/png" href="/img/store-line.png">
    <meta name="description" content="Final project site for WebDev lesson">
    <meta name="author" content="webdevgroup">
    <link rel="canonical" href="https://webdevgroupshop.netlify.app">

    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">

    <link rel="manifest" href="/site.webmanifest">
    <meta name="theme-color" content="#1d2a35">

    <meta property="og:locale" content="en_US">
    <meta property="og:type" content="website">
    <meta property="og:title" content="github">
    <meta property="og:description" content="Main github">
    <meta property="og:url" content="https://github.com/Selector0073/webdevgroupShop">
    <meta property="og:site_name" content="Main github">

    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@graph": [
                {
                    "@type": "Organization",
                    "name": "webdevgroup",
                    "url": "https://github.com/Selector0073/webdevgroupShop"
                },
                {
                    "@type": "WebSite",
                    "url": "https://webdevgroupshop.netlify.app",
                    "name": "WebDevGroupShop"
                },
                {
                    "@type": "BreadcrumbList",
                    "itemListElement": [
                        { "@type": "ListItem", "position": 1, "name": "Головна", "item": "https://github.com/Selector0073/webdevgroupShop/index.html" },
                        { "@type": "ListItem", "position": 2, "name": "Про нас", "item": "https://github.com/Selector0073/webdevgroupShop/about.html" },
                        { "@type": "ListItem", "position": 3, "name": "Каталог", "item": "https://github.com/Selector0073/webdevgroupShop/shop.html" },
                        { "@type": "ListItem", "position": 4, "name": "Послуги", "item": "https://github.com/Selector0073/webdevgroupShop/services.html" },
                        { "@type": "ListItem", "position": 5, "name": "Акції", "item": "https://github.com/Selector0073/webdevgroupShop/sales.html" },
                        { "@type": "ListItem", "position": 6, "name": "Гарантії і повернення", "item": "https://github.com/Selector0073/webdevgroupShop/guarantee.html" },
                        { "@type": "ListItem", "position": 7, "name": "Контакти", "item": "https://github.com/Selector0073/webdevgroupShop/contacts.html" },
                        { "@type": "ListItem", "position": 8, "name": "Оптовим покупцям", "item": "https://github.com/Selector0073/webdevgroupShop/wholesale.html" },
                        { "@type": "ListItem", "position": 9, "name": "Вакансії", "item": "https://github.com/Selector0073/webdevgroupShop/vacancies.html" },
                        { "@type": "ListItem", "position": 10, "name": "Політика конфіденційності", "item": "https://github.com/Selector0073/webdevgroupShop/politic.html" },
                        { "@type": "ListItem", "position": 11, "name": "FAQ", "item": "https://github.com/Selector0073/webdevgroupShop/FAQ.html" },
                        { "@type": "ListItem", "position": 12, "name": "Допомога", "item": "https://github.com/Selector0073/webdevgroupShop/support.html" },
                        { "@type": "ListItem", "position": 13, "name": "Товар1", "item": "https://github.com/Selector0073/webdevgroupShop/product1.html" },
                        { "@type": "ListItem", "position": 14, "name": "Товар2", "item": "https://github.com/Selector0073/webdevgroupShop/product2.html" },
                        { "@type": "ListItem", "position": 15, "name": "Товар3", "item": "https://github.com/Selector0073/webdevgroupShop/product3.html" }
                    ]
                }
            ]
        }
    </script>

    <link rel="preload" href="/scripts/index.js" as="script">

    <link 
        rel="preload" 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" 
        as="script" 
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" 
        crossorigin="anonymous">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

    <meta name="mobile-web-app-capable" content="yes">
</head>
<body>
    <div id="bg"></div>
    <header> 
        <nav class="navbar bg-dark navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">WebDevGroupShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class={`nav-link ${pathname === '/' ? 'active' : ''}`} aria-current="page" href="/">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class={`nav-link ${pathname === '/shop' ? 'active/' : ''}`} href="/shop">Каталог</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Інформація
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class={`dropdown-item ${pathname === '/services/' ? 'active' : ''}`} href="/services">Послуги</a></li>
                                <li><a class={`dropdown-item ${pathname === '/sales/' ? 'active' : ''}`} href="/sales">Акції та знижки</a></li>
                                <li><a class={`dropdown-item ${pathname === '/guarantee/' ? 'active' : ''}`} href="/guarantee">Гарантії і умови повернення</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class={`dropdown-item ${pathname === '/about/' ? 'active' : ''}`} href="/about">Про нас</a></li>
                                <li><a class={`dropdown-item ${pathname === '/contacts/' ? 'active' : ''}`} href="/contacts">Контакти</a></li>
                                <li><a class={`dropdown-item ${pathname === '/wholesale/' ? 'active' : ''}`} href="/wholesale">Оптовим покупцям</a></li>
                                <li><a class={`dropdown-item ${pathname === '/vacancies/' ? 'active' : ''}`} href="/vacancies">Вакансії</a></li>
                                <li><a class={`dropdown-item ${pathname === '/politic/' ? 'active' : ''}`} href="/politic">Політика конфіденційності</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Допомога
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class={`dropdown-item ${pathname === '/FAQ/' ? 'active' : ''}`} href="/FAQ">FAQ</a></li>
                                <li><a class={`dropdown-item ${pathname === '/support/' ? 'active' : ''}`} href="/support">Підтримка</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <slot />
    </main>
    <footer>Selector0073 | Каріна Батура | Катя Каташинська</footer>
    <script src="https://cdn.jsdelivr.net/npm/three@0.155.0/build/three.min.js"></script>
    <script src="/scripts/index.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>
